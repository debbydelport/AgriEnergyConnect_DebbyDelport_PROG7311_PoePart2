@model List<AgriEnergyConnect_DebbyDelport_PROG7311_PoePart2.Models.Product>

@{
    ViewData["Title"] = "My Products";
}

<h2>My Product Listings</h2>

@if (!Model.Any())
{
    <p>You have not added any products yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
